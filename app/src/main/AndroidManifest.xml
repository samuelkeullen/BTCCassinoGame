<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sklinfotech.btcgames">

    <uses-sdk tools:overrideLibrary="com.leanplum, com.google.android.gms"/>

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- Prevents the device from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- These permissions are required only for geofencing. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name="com.sklinfotech.btcgames.lib.CommonApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:allowBackup="false">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.sklinfotech.btcgames.app.IntroActivity"
            android:screenOrientation="landscape"
            android:noHistory="true"
            android:label="Bitcoin Games">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sklinfotech.btcgames.app.CreateAccountActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.sklinfotech.btcgames.app.MainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.sklinfotech.btcgames.app.SettingsActivity"
            android:screenOrientation="landscape"
            android:label="Settings" />
        <activity
            android:name="com.sklinfotech.btcgames.app.DepositActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Deposit" />
        <activity
            android:name="com.sklinfotech.btcgames.app.BlackjackActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Blackjack" />
        <activity
            android:name="com.sklinfotech.btcgames.app.SlotsActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Slots" />
        <activity
            android:name="com.sklinfotech.btcgames.app.SlotsHelpActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Slots Help" />
        <activity
            android:name="com.sklinfotech.btcgames.app.VideoPokerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="VideoPoker" />
        <activity
            android:name="com.sklinfotech.btcgames.app.DiceActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Dice" />
        <activity
            android:name="com.sklinfotech.btcgames.app.CashOutActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme"
            android:label="Cash Out" />
    </application>
</manifest>